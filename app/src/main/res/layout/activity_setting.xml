<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="skrik.lgb.mobilesafe.activity.SettingActivity">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>

    <!-- 将以下的相对布局,抽取到单独的一个类中去做管理,以后只需要在布局文件中添加此类,即可达到以下效果-->
<skrik.lgb.mobilesafe.view.SettingItemView
    xmlns:mobilesafe="http://schemas.android.com/apk/res/skrik.lgb.mobilesafe"
    android:id="@+id/siv_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    mobilesafe:destitle = "自动更新设置"
    mobilesafe:deson = "自动更新已开启"
    mobilesafe:desoff = "自动更新已关闭">
</skrik.lgb.mobilesafe.view.SettingItemView>



</LinearLayout>
